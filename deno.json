{
  "fmt": {
    "semiColons": false,
    "proseWrap": "preserve",
    "exclude": [
      ".yarn/",
      ".pnp.cjs",
      ".pnp.loader.mjs",
      "packages/openneuro-app/src/scripts/utils/schema-validator.js",
      "dist",
      "packages/**/dist",
      "services/datalad/tests/.pytest_cache",
      "**/__pycache/**"
    ]
  },
  "tasks": {
    "tests": "deno test --allow-read --allow-write --allow-env cli/",
    "coverage": "deno test --allow-read --allow-write --allow-net --allow-env --coverage cli/ && deno coverage ./coverage --lcov > coverage.lcov"
  }
}
