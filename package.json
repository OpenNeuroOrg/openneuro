{
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "test": "jest",
    "coverage": "jest --coverage",
    "codecov": "codecov",
    "lint": "eslint --cache --ext .jsx --ext .js --ext .ts --ext .tsx packages/",
    "openneuro": "node packages/openneuro-cli/src"
  },
  "devDependencies": {
    "@sentry/cli": "1.37.4",
    "@types/jasmine": "^2.8.8",
    "@typescript-eslint/eslint-plugin": "^2.20.0",
    "@typescript-eslint/parser": "^2.20.0",
    "babel-eslint": "10.0.3",
    "codecov": "^3.0.0",
    "core-js": "^3.3.2",
    "eslint": "6.8.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-react": "^7.7.0",
    "husky": "^0.15.0-rc.13",
    "jest": "^24.9.0",
    "lerna": "3.20.2",
    "lint-staged": "^6.0.1",
    "prettier": "^1.7.0",
    "typescript": "^3.7.5"
  },
  "workspaces": [
    "packages/*"
  ],
  "lint-staged": {
    "linters": {
      "*.{js,jsx,json}": [
        "prettier --write",
        "git add"
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "projects": [
      "packages/*"
    ],
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/papaya.js",
      "!**/*.spec.js",
      "!**/node_modules/**",
      "!**/vendor/**"
    ]
  }
}
