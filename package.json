{
  "private": true,
  "scripts": {
    "start": "docker-compose up --build -V",
    "build": "yarn ultra -r build",
    "bootstrap": "lerna bootstrap",
    "test": "jest",
    "coverage": "jest --coverage",
    "codecov": "codecov",
    "lint": "eslint --cache --ext .jsx --ext .js --ext .ts --ext .tsx packages/",
    "openneuro": "node packages/openneuro-cli/src"
  },
  "devDependencies": {
    "@sentry/cli": "1.37.4",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^2.20.0",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.4.1",
    "babel-eslint": "10.0.3",
    "codecov": "^3.0.0",
    "core-js": "^3.3.2",
    "esbuild": "^0.9.2",
    "eslint": "6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.7.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^0.15.0-rc.13",
    "jest": "^26.6.3",
    "lerna": "3.20.2",
    "lint-staged": "^6.0.1",
    "prettier": "^1.7.0",
    "tsc-watch": "^4.2.9",
    "typescript": "4.0.6",
    "ultra-runner": "^3.10.5"
  },
  "workspaces": [
    "packages/*"
  ],
  "lint-staged": {
    "linters": {
      "*.{js,jsx,json}": [
        "prettier --write",
        "git add"
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "projects": [
      "packages/*"
    ],
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/papaya.js",
      "!**/*.spec.js",
      "!**/node_modules/**",
      "!**/vendor/**",
      "!.docz/**"
    ]
  },
  "dependencies": {
    "docz": "^2.3.1",
    "gatsby-plugin-s3": "^0.3.3",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  }
}
