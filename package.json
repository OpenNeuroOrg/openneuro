{
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "test": "jest",
    "coverage": "jest --coverage",
    "codecov": "codecov",
    "lint": "eslint --cache --ext .jsx --ext .js packages/"
  },
  "devDependencies": {
    "babel-eslint": "8.2.2",
    "codecov": "^3.0.0",
    "eslint": "4.19.1",
    "eslint-plugin-react": "^7.7.0",
    "husky": "^0.15.0-rc.13",
    "jest": "^22.4.3",
    "lerna": "^2.9.1",
    "lint-staged": "^6.0.1",
    "prettier": "^1.7.0"
  },
  "workspaces": ["packages/*"],
  "lint-staged": {
    "linters": {
      "*.{js,jsx,json}": ["prettier --write", "git add"]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "projects": ["packages/*"]
  }
}
