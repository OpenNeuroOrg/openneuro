{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "globals": {
    "process": true,
    "__GIT_HASH__": true,
    "__GIT_BRANCH__": true,
    "serviceWorkerOption": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module",
    "allowImportExportEverywhere": false,
    "codeFrame": false
  },
  "plugins": ["react"],
  "rules": {
    "indent": 0,
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single", { "avoidEscape": true }],
    "semi": ["error", "never"],
    "react/no-string-refs": 0
  },
  "settings": {
    "react": {
      "pragma": "React",
      "version": "0.13.3"
    },
    "import/resolver": {
      "webpack": { "config": { "resolve": { "extensions": [".js", ".jsx"] } } }
    }
  }
}
